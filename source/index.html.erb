---
pageable: true
per_page: 2
---
<% page_articles.each_with_index do |article, i| %>
  <section>
    <div class="entry">
      <div class="post">
        <h1 class="title"><%= link_to article.title, article %></h1>

        <div class="published-tags">By <span class="author"><%= link_to post_author(article).name, author_path(article) %></span> |
          <span class="date"><%= article.date.strftime('%B, %d %Y') %></span> on <%= tags(article) %></div>

        <%= article.body %>

      </div>
      <hr>
    </div>
  </section>
<% end %>

<% if paginate %>
  <section>
    <div class="pagination">
      <div class="paginators">
        <% if prev_page %>
          <%= link_to 'â† Newer Posts', prev_page, class: 'newer-posts'%>
        <% end %>
        <span class="page-number">Page <%= page_number %> of <%= num_pages %></span>

        <% if next_page %>
          <%= link_to 'Older Posts â†’', next_page, class: "older-posts" %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
